<div class="row feed-header">

  <div class="large-2 columns coins">
    <%= image_tag "money.png" %>
    <br>
    <span id="coins"><%= pet.coins || 0 %></span>
  </div>

  <div class="large-8 columns">
      <div id="scale">
        <%= content_tag :span, "", id: "tick" %>
        <%= image_tag pet.health_icon, title: pet.items.count, id: "health_icon" %>
      </div>
  </div>

  <div class="large-2 columns">
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%=
      image_tag image_path(pet.pet_image), class: "droppable",
        id: "pet-image",
        data: {
          open: pet.pet_eating_image,
          closed: pet.pet_image
        }
    %>
    <h2><%= pet.name %></h2>
  </div>
</div>

<script>
  function positionTick(index) {
    left = 30 + 193 * index;
    $("#tick").css({ left: left + "px" });
  }
</script>

<% content_for :dom_ready do %>
  positionTick(<%= pet.health_index %>);
<% end %>
