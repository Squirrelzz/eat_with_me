<p>Welcome, <%= @pet.person_name %>!</p>

<section class="screen--feed">
  <%= render @pet %>

  <div class="row">
    <div class="small-12 columns">
      TODAY
    </div>
  </div>

  <% Meal.all.each do |meal| %>
    <div class="row foods">
      <div class="small-2 large-2 columns">
        <%= image_tag meal.image_url %>
      </div>

      <div class="small-4 large-6 columns">
        <h4><%= meal.name.titleize %></h4>
      </div>

      <div class="small-3 large-2 columns status <%= meal.qualification %>">
        <%= meal.qualification %>
		<!--replace a-good b-neutral c-bad with "happy.png", "neutral.png", "sad.png"-->
      </div>

      <div class="small-3 large-2 columns">
        <%= form_for Feed.new do |f| %>
          <%= f.hidden_field :pet_id, value: @pet.id %>
          <%= f.hidden_field :meal_id, value: meal.id %>
          <%= f.submit value: "Feed!", class: "button round" %>
        <% end %>
      </div>

      <div class="columns"></div>
    </div>
  <% end %>
</section>
