<p>Welcome, <%= @pet.person_name %>!</p>

<section class="screen--feed">
  <%= render @pet %>

  <div class="row">
    <div class="small-12 columns">
      <p>Today, we ate...</p>
    </div>
  </div>

  <div class="row food">
    <% @pet.person.meals_people.all.each do |meal| %>
      <div class="small-3 large-2 columns">
        <%= image_tag meal.image_url, title: meal.name.titleize, class: ["draggable"], data: { meal_id: meal.id, pet_id: @pet.id, tooltip: "", :"tip-id" => meal.id } %>
      </div>
    <% end %>
    <div class="columns"></div>
  </div>
</section>

<div id="justFed" class="reveal-modal small text-center">
  <h2><span id='food-name'>FOOD_NAME</span></h2>
  <p class="pop-health"><%= image_tag nil, id: "happiness" %> <span id="food-healthy">[[healthy]]</span></p>
  <h3 class="pop-money"><%= image_tag "money.png" %> + <span id="food-value">x</span> </h3>
  <p><%= @pet.name %> is feeling <span id="feeling">xxx</span></p>
  <a class="close-reveal-modal">&#215;</a>
</div>

<% content_for :dom_ready do %>
  new FeedMe();
<% end %>
