<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <%= fields_for :children do |p| %>
    <h3>Child login details</h3>
    <div><%= p.label :name %><br /><%= p.text_field :name %></div>
    <div><%= p.label :email %><br /><%= p.email_field :email %></div>
    <div><%= p.label :password %><br /><%= p.password_field :password %></div>
    <div>
      <%= p.label :password_confirmation %><br />
      <%= p.password_field :password_confirmation %>
    </div>
  <% end %>

  <div><%= f.submit "Sign up", class: "button round success" %></div>
<% end %>

<%= render "devise/shared/links" %>
